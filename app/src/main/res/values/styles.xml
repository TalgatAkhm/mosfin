<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/soft_blue</item>
        <item name="colorPrimaryDark">@color/peacock_blue</item>
        <item name="colorAccent">@color/soft_blue</item>
    </style>

    <style name="ImportantOrBigText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>
    <style name="ButtonActive">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextMain">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/disable_text</item>
    </style>

</resources>
